{
  "compilerOptions": {
    // Path to output directory
    "outDir": "./dist/",
    // Allow sourcemap support
    "sourceMap": true,
    // Enable strict null checks as a best practice
    "strictNullChecks": true,
    // Specify module code generation
    "module": "esnext",
    // Specify ECMAScript target version
    "target": "es2015",
    "strict": true,
    // Allow a partial TypeScript and JavaScript codebase
    "allowJs": true,
    "checkJs": true,
    // Required for a funny Firebase module error
    "moduleResolution": "node",
    // The Firebase module will make TypeScript mad otherwise
    "allowSyntheticDefaultImports": true,
    // Used for loading version number
    "resolveJsonModule": true,

    "types": ["@cloudflare/workers-types"]
  },
  "include": ["src/assets/ts", "src/types", "@sentry/types", "functions"]
}

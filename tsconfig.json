{
  "compilerOptions": {
    // Path to output directory
    "outDir": "./dist/",
    // Allow sourcemap support
    "sourceMap": true,
    // Enable strict null checks as a best practice
    "strictNullChecks": true,
    // Specify module code generation
    "module": "es2015",
    // Specify ECMAScript target version
    "target": "es2019",
    // Allow a partial TypeScript and JavaScript codebase
    "allowJs": true,
    "checkJs": true,
    // Required for a funny Firebase module error
    "moduleResolution": "node",
    // The Firebase module will make TypeScript mad otherwise
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/assets/ts"]
}
